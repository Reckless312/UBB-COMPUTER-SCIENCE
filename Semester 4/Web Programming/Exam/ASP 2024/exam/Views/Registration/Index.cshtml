@model Registration
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DesiredDate" class="control-label"></label>
        <input asp-for="DesiredDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CityDestination" class="control-label"></label>
        <input asp-for="CityDestination" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Begin Reservation" class="btn btn-primary" />
    </div>
</form>

